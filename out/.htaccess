RewriteEngine On

# Direct mapping for static routes
RewriteRule ^about/?$    /about/index.html [L]
RewriteRule ^workshop/?$  /workshop/index.html [L]
RewriteRule ^services/?$ /services/index.html [L]
RewriteRule ^contact/?$  /contact/index.html [L]
RewriteRule ^connect/?$ /connect/index.html [L]
RewriteRule ^_not-found/?$ /_not-found/index.html [L]

# Serve existing files and folders directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# SPA fallback - serve home for client-side routes
RewriteRule . /index.html [L]